{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ]
  },
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=hortifruti_db;Username=hortifruti;Password=Your_password123"
  },
  "Jwt": {
    "Issuer": "Hortifruti.Api",
    "Audience": "Hortifruti.Clients",
    "SecretKey": "hortifruti-demo-secret-2025!!!-jwt-key-strong",
    "ExpirationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:4200" ]
  },
  "AllowedHosts": "*"
}
